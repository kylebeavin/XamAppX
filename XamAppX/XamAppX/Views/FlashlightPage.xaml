<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamAppX.Views.FlashlightPage"
            xmlns:vm="clr-namespace:XamAppX.ViewModels"
             Title="{Binding Title}">
    <ContentPage.BindingContext>
        <vm:FlashlightViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Button Text="Turn On Flashlight"
                    x:Name="ButtonOn"
                    Clicked="ButtonOn_Clicked">
            </Button>
            <Button Text="Turn Off Flashlight"
                    x:Name="ButtonOff"
                    Clicked="ButtonOff_Clicked">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>